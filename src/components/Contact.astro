        <h3 class="text-xl font-bold text-white mb-4">Envie uma Mensagem</h3>
        
        <form action="https://formspree.io/f/xpwpjgej" method="POST" class="space-y-4">
          <!-- Campos em duas colunas para otimizar espaço -->
          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="name" class="text-xs text-blue-200 block mb-1">Nome</label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder="Seu nome completo"
                required
                class="w-full bg-blue-900/20 border border-blue-900/50 rounded-lg p-2.5 text-white placeholder-blue-300/50 focus:outline-none focus:ring-1 focus:ring-blue-400/50 transition-all text-sm"
              />
            </div>
            <div>
              <label for="email" class="text-xs text-blue-200 block mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="seu@email.com"
                required
                class="w-full bg-blue-900/20 border border-blue-900/50 rounded-lg p-2.5 text-white placeholder-blue-300/50 focus:outline-none focus:ring-1 focus:ring-blue-400/50 transition-all text-sm"
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="text-xs text-blue-200 block mb-1">Assunto</label>
