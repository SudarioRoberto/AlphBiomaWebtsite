<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Como decodificamos o microbioma do seu animal</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }
    
    body {
      background: linear-gradient(135deg, #08192f, #0b1a2d, #060d19);
      color: white;
      min-height: 100vh;
      padding: 0;
      overflow-x: hidden;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 4rem 2rem;
    }
    
    .section-header {
      text-align: center;
      margin-bottom: 4rem;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 0.8s ease forwards;
    }
    
    .section-header h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      background: linear-gradient(90deg, #4B9AFB, #57B4FF);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      display: inline-block;
    }
    
    .section-header p {
      font-size: 1.25rem;
      color: #a1c4fd;
      max-width: 800px;
      margin: 0 auto;
    }
    
    .process-container {
      position: relative;
    }
    
    .process-line {
      position: absolute;
      top: 100px;
      left: 50%;
      width: 4px;
      height: calc(100% - 200px);
      background: linear-gradient(to bottom, rgba(75, 154, 251, 0.3), rgba(87, 180, 255, 0.8));
      transform: translateX(-50%);
      z-index: 1;
    }
    
    .process-line-progress {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 0%;
      background: linear-gradient(to bottom, #4B9AFB, #57B4FF);
      transition: height 1.5s ease-out;
      z-index: 2;
    }
    
    .process-items {
      position: relative;
      z-index: 3;
    }
    
    .process-item {
      display: flex;
      align-items: center;
      margin-bottom: 6rem;
      opacity: 0;
      transform: translateY(30px);
    }
    
    .process-item:nth-child(odd) {
      flex-direction: row;
    }
    
    .process-item:nth-child(even) {
      flex-direction: row-reverse;
    }
    
    .process-icon {
      flex: 0 0 150px;
      height: 150px;
      margin: 0 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(13, 40, 80, 0.5);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(75, 154, 251, 0.3);
      border-radius: 50%;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 
                  0 0 20px rgba(75, 154, 251, 0.3);
      position: relative;
      overflow: hidden;
      transition: all 0.4s ease;
    }
    
    .process-icon::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle at center, rgba(75, 154, 251, 0.2) 0%, transparent 70%);
      opacity: 0;
      transform: scale(0.5);
      transition: all 0.6s ease;
    }
    
    .process-icon:hover {
      transform: scale(1.05);
      border-color: rgba(75, 154, 251, 0.8);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3), 
                  0 0 30px rgba(75, 154, 251, 0.5);
    }
    
    .process-icon:hover::before {
      opacity: 1;
      transform: scale(1);
      animation: pulse 2s infinite;
    }
    
    .process-icon img {
      width: 60px;
      height: 60px;
      filter: drop-shadow(0 0 8px rgba(75, 154, 251, 0.6));
      transition: all 0.4s ease;
    }
    
    .process-icon:hover img {
      transform: scale(1.1);
      filter: drop-shadow(0 0 12px rgba(75, 154, 251, 0.8));
    }
    
    .process-content {
      flex: 1;
      padding: 2rem;
      background: rgba(13, 40, 80, 0.4);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      border: 1px solid rgba(75, 154, 251, 0.2);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      transition: all 0.4s ease;
    }
    
    .process-content:hover {
      transform: translateY(-5px);
      border-color: rgba(75, 154, 251, 0.4);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2),
                  0 0 20px rgba(75, 154, 251, 0.2);
    }
    
    .process-content h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: #ffffff;
      display: flex;
      align-items: center;
    }
    
    .process-content h3 span {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      margin-right: 12px;
      background: linear-gradient(135deg, #4B9AFB, #57B4FF);
      border-radius: 50%;
      font-size: 1.2rem;
    }
    
    .process-content p {
      color: #a1c4fd;
      font-size: 1rem;
      line-height: 1.6;
    }
    
    .info-box {
      margin-top: 1.5rem;
      padding: 1rem;
      background: rgba(75, 154, 251, 0.1);
      border-left: 3px solid #4B9AFB;
      border-radius: 4px;
    }
    
    .info-box h4 {
      font-size: 1rem;
      margin-bottom: 0.5rem;
      color: #57B4FF;
    }
    
    .info-box p {
      font-size: 0.9rem;
      color: #a1c4fd;
    }
    
    .animated-particles {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 0;
    }
    
    .particle {
      position: absolute;
      border-radius: 50%;
      background: rgba(75, 154, 251, 0.3);
      box-shadow: 0 0 10px rgba(75, 154, 251, 0.5);
      animation: float 15s infinite linear;
    }
    
    @keyframes float {
      0% {
        transform: translateY(0) translateX(0) rotate(0deg);
        opacity: 0;
      }
      10% {
        opacity: 0.8;
      }
      90% {
        opacity: 0.8;
      }
      100% {
        transform: translateY(-1000px) translateX(100px) rotate(360deg);
        opacity: 0;
      }
    }
    
    @keyframes pulse {
      0% {
        opacity: 0.4;
      }
      50% {
        opacity: 0.8;
      }
      100% {
        opacity: 0.4;
      }
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @media (max-width: 768px) {
      .process-item {
        flex-direction: column !important;
        text-align: center;
        margin-bottom: 4rem;
      }
      
      .process-icon {
        margin: 0 auto 2rem;
      }
      
      .process-line {
        left: 50%;
      }
      
      .section-header h2 {
        font-size: 2rem;
      }
      
      .section-header p {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="section-header">
      <h2>Como decodificamos o microbioma do seu animal?</h2>
      <p>Nossa abordagem científica em 4 etapas simples para transformar a saúde e produtividade do seu rebanho</p>
    </div>
    
    <div class="process-container">
      <div class="process-line">
        <div class="process-line-progress" id="processProgress"></div>
      </div>
      
      <div class="process-items">
        <!-- Step 1 -->
        <div class="process-item" data-step="1">
          <div class="process-content">
            <h3><span>1</span> Exploração e colaboração</h3>
            <p>Trabalhamos juntos para entender suas metas de produção. Identificamos os problemas específicos que você enfrenta e o que deseja melhorar em seu rebanho - seja relacionado à saúde, nutrição, ganho de peso ou outros desafios.</p>
            <div class="info-box">
              <h4>Por que isso importa?</h4>
              <p>O microbioma do animal interage diretamente com fatores ambientais e de manejo. Entender seu contexto específico é crucial para desenvolver soluções personalizadas que realmente funcionam.</p>
            </div>
          </div>
          <div class="process-icon">
            <img src="/api/placeholder/80/80" alt="Ícone de colaboração" />
          </div>
        </div>
        
        <!-- Step 2 -->
        <div class="process-item" data-step="2">
          <div class="process-content">
            <h3><span>2</span> Kit personalizado</h3>
            <p>Criamos um kit de coleta específico para suas necessidades, contendo todo o material necessário para amostrar os animais de forma segura e eficiente, preservando a integridade microbiológica das amostras.</p>
            <div class="info-box">
              <h4>Tecnologia de ponta</h4>
              <p>Nossos kits utilizam estabilizadores especiais que preservam o DNA e RNA microbiano, garantindo que a amostra chegue ao laboratório exatamente como estava no momento da coleta.</p>
            </div>
          </div>
          <div class="process-icon">
            <img src="/api/placeholder/80/80" alt="Ícone de kit" />
          </div>
        </div>
        
        <!-- Step 3 -->
        <div class="process-item" data-step="3">
          <div class="process-content">
            <h3><span>3</span> Coleta e envio de amostras</h3>
            <p>Você coleta amostras seguindo nosso protocolo fácil. Cada amostra é projetada para capturar a diversidade microbiana completa, identificando espécies que outros métodos perdem. Após a coleta, basta enviar o kit de volta para nós.</p>
            <div class="info-box">
              <h4>Processo simplificado</h4>
              <p>Fornecemos treinamento e suporte para garantir que sua equipe realize a coleta corretamente, maximizando o valor das informações obtidas.</p>
            </div>
          </div>
          <div class="process-icon">
            <img src="/api/placeholder/80/80" alt="Ícone de coleta" />
          </div>
        </div>
        
        <!-- Step 4 -->
        <div class="process-item" data-step="4">
          <div class="process-content">
            <h3><span>4</span> Início da jornada</h3>
            <p>Seus dados serão processados e transformados em insights práticos. Nossa equipe de cientistas e especialistas em produção animal interpreta os resultados e desenvolve recomendações específicas para maximizar o desempenho da sua produção.</p>
            <div class="info-box">
              <h4>Resultados transformadores</h4>
              <p>Você poderá ver melhorias na saúde digestiva, imunidade mais forte e ganhos significativos na conversão alimentar - resultados que se traduzem diretamente em maior lucratividade.</p>
            </div>
          </div>
          <div class="process-icon">
            <img src="/api/placeholder/80/80" alt="Ícone de análise" />
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="animated-particles" id="particles"></div>

  <script>
    // Create animated particles
    function createParticles() {
      const container = document.getElementById('particles');
      const particleCount = 15;
      
      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.classList.add('particle');
        
        // Random size
        const size = Math.random() * 10 + 5;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        
        // Random position
        const posX = Math.random() * 100;
        const posY = Math.random() * 100 + 100;
        particle.style.left = `${posX}%`;
        particle.style.bottom = `${-posY}px`;
        
        // Random animation duration and delay
        const duration = Math.random() * 20 + 10;
        const delay = Math.random() * 15;
        particle.style.animationDuration = `${duration}s`;
        particle.style.animationDelay = `${delay}s`;
        
        container.appendChild(particle);
      }
    }
    
    // Animation for process items
    function animateProcessItems() {
      const processItems = document.querySelectorAll('.process-item');
      const processProgress = document.getElementById('processProgress');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.style.animation = 'fadeInUp 0.8s ease forwards';
            
            // Update progress line based on visible steps
            const step = entry.target.getAttribute('data-step');
            const progress = (step / processItems.length) * 100;
            processProgress.style.height = `${progress}%`;
          }
        });
      }, { threshold: 0.2 });
      
      processItems.forEach((item) => {
        observer.observe(item);
      });
    }
    
    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      createParticles();
      animateProcessItems();
      
      // Fallback animation for browsers without IntersectionObserver
      setTimeout(() => {
        const processItems = document.querySelectorAll('.process-item');
        const processProgress = document.getElementById('processProgress');
        
        processItems.forEach((item, index) => {
          setTimeout(() => {
            item.style.opacity = '1';
            item.style.transform = 'translateY(0)';
            
            // Update progress line
            const step = index + 1;
            const progress = (step / processItems.length) * 100;
            processProgress.style.height = `${progress}%`;
          }, 400 * index);
        });
      }, 500);
    });
  </script>
</body>
</html>