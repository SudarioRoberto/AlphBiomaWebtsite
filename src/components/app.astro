  <script>
    // Initialize the app interface
    document.addEventListener('DOMContentLoaded', function() {
      // Screen navigation
      const dots = document.querySelectorAll('.screen-dot');
      const phoneMockup = document.getElementById('phoneMockup');
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          // Reset active dot
          dots.forEach(d => d.classList.remove('active'));
          dot.classList.add('active');
          
          // Change phone perspective based on dot index
          const rotateY = (index - 1) * 15; // -15, 0, 15 degrees
          phoneMockup.style.transform = `perspective(1000px) rotateY(${rotateY}deg)`;
        });
      });
      
      // Simulate app interaction
      const timelineItems = document.querySelectorAll('.timeline-item');
      
      timelineItems.forEach(item => {
        item.addEventListener('click', () => {
          // Add a subtle highlight effect
          item.style.transform = 'scale(1.03)';
          setTimeout(() => {
            item.style.transform = 'scale(1)';
          }, 300);
        });
      });
      
      // Feature cards hover effect
      const featureCards = document.querySelectorAll('.feature-card');
      
      featureCards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          const randomRotateX = (Math.random() * 3) - 1.5;
          const randomRotateY = (Math.random() * 3) - 1.5;
          card.style.transform = `translateY(-8px) rotateX(${randomRotateX}deg) rotateY(${randomRotateY}deg)`;
        });
        
        card.addEventListener('mouseleave', () => {
          card.style.transform = 'translateY(0) rotateX(0) rotateY(0)';
        });
      });
    });
  </script>
