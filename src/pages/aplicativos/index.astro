    <script>
              document.addEventListener('DOMContentLoaded', function() {
          // Elementos do modelo 3D
          const sampleTube = document.getElementById('sampleTube');
          const dnaStrand = document.getElementById('dnaStrand');
          const modelSample = document.getElementById('modelSample');
          
          // Botões de controle
          const rotateBtn = document.getElementById('rotateBtn');
          const zoomInBtn = document.getElementById('zoomInBtn');
          const zoomOutBtn = document.getElementById('zoomOutBtn');
          
          // Propriedades de transformação
          let isRotating = false;
          let rotationX = 0;
          let rotationY = 0;
          let scale = 1;
          
          // Estado de interação
          let isDragging = false;
          let previousX, previousY;
          let touchStartTime = 0;
          
          // Iniciar rotação do DNA ao carregar
          setTimeout(() => {
            if (dnaStrand) {
              dnaStrand.classList.add('rotating');
              isRotating = true;
            }
          }, 1000);
          
          // Função para atualizar a transformação do tubo
          function updateTransform() {
            if (sampleTube) {
              sampleTube.style.transform = `rotateX(${rotationX}deg) rotateY(${rotationY}deg) scale(${scale})`;
            }
          }
          
          // Funções para os botões de controle
          if (rotateBtn) {
            rotateBtn.addEventListener('click', function() {
              if (dnaStrand) {
                if (isRotating) {
                  dnaStrand.classList.remove('rotating');
                } else {
                  dnaStrand.classList.add('rotating');
                }
                isRotating = !isRotating;
              }
            });
          }
          
          if (zoomInBtn) {
            zoomInBtn.addEventListener('click', function() {
              if (scale < 1.5) {
                scale += 0.1;
                updateTransform();
              }
            });
          }
          
          if (zoomOutBtn) {
            zoomOutBtn.addEventListener('click', function() {
              if (scale > 0.6) {
                scale -= 0.1;
                updateTransform();
              }
            });
          }
          
          // Manipulação de eventos de mouse/touch para rotação
          const modelContainer = document.querySelector('.model-container');
          
          if (modelContainer) {
            // Mouse events
            modelContainer.addEventListener('mousedown', startDrag);
            document.addEventListener('mousemove', drag);
            document.addEventListener('mouseup', stopDrag);
            
            // Touch events
            modelContainer.addEventListener('touchstart', startDrag, { passive: false });
            document.addEventListener('touchmove', drag, { passive: false });
            document.addEventListener('touchend', stopDrag);
          }
          
          function startDrag(e) {
            e.preventDefault();
            isDragging = true;
            
            // Registrar o tempo inicial para detectar toques rápidos (cliques)
            touchStartTime = new Date().getTime();
            
            if (e.type === 'touchstart') {
              previousX = e.touches[0].clientX;
              previousY = e.touches[0].clientY;
            } else {
              previousX = e.clientX;
              previousY = e.clientY;
            }
          }
          
          function drag(e) {
            if (!isDragging) return;
            
            let currentX, currentY;
            if (e.type === 'touchmove') {
              e.preventDefault(); // Prevenir o scroll da página
              currentX = e.touches[0].clientX;
              currentY = e.touches[0].clientY;
            } else {
              currentX = e.clientX;
              currentY = e.clientY;
            }
            
            // Calcular a diferença de movimento
            const deltaX = currentX - previousX;
            const deltaY = currentY - previousY;
            
            // Atualizar a rotação (movimento horizontal = rotação Y, movimento vertical = rotação X)
            rotationY += deltaX * 0.5;
            rotationX -= deltaY * 0.5;
            
            // Limitar a rotação X para evitar que o modelo "vire de cabeça para baixo"
            rotationX = Math.max(-30, Math.min(30, rotationX));
            
            // Aplicar a transformação
            updateTransform();
            
            // Atualizar as posições anteriores
            previousX = currentX;
            previousY = currentY;
          }
          
          function stopDrag(e) {
            if (!isDragging) return;
            
            isDragging = false;
            
            // Verificar se foi um clique rápido (menos de 200ms)
            const touchEndTime = new Date().getTime();
            const touchDuration = touchEndTime - touchStartTime;
            
            if (touchDuration < 200) {
              // Foi um toque rápido, alternar a rotação do DNA
              if (dnaStrand) {
                if (isRotating) {
                  dnaStrand.classList.remove('rotating');
                } else {
                  dnaStrand.classList.add('rotating');
                }
                isRotating = !isRotating;
              }
            }
          }
          
          // Criação dinâmica do DNA se não existir no HTML
          if (!dnaStrand && sampleTube) {
            const newDnaStrand = document.createElement('div');
            newDnaStrand.className = 'dna-strand';
            newDnaStrand.id = 'dnaStrand';
            
            // Criar camadas de DNA
            for (let i = 0; i < 8; i++) {
              const layer = document.createElement('div');
              layer.className = 'dna-layer';
              newDnaStrand.appendChild(layer);
            }
            
            sampleTube.appendChild(newDnaStrand);
            
            // Iniciar rotação
            setTimeout(() => {
              newDnaStrand.classList.add('rotating');
              isRotating = true;
            }, 1000);
          }
          
          // Animação da barra de progresso
          const progressBar = document.querySelector('.status-progress');
          if (progressBar) {
            progressBar.style.width = '75%';
          }
          
          // Animação dos itens da timeline
          const timelineItems = document.querySelectorAll('.timeline-item');
          timelineItems.forEach((item, index) => {
            setTimeout(() => {
              item.style.opacity = '0';
              item.style.transform = 'translateX(20px)';
              
              setTimeout(() => {
                item.style.transition = 'all 0.5s ease';
                item.style.opacity = '1';
                item.style.transform = 'translateX(0)';
              }, 50);
            }, index * 150);
          });
          
          console.log('Script 3D do AlphaBioma carregado com sucesso!');
        });
