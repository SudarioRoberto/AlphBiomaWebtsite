/* Restante do CSS para o modelo 3D... */
      
      /* Animations */
      @keyframes fadeInRight {
        from {
          opacity: 0;
          transform: translateX(20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
      
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      
      /* Responsive Styles */
      @media (min-width: 768px) {
        .app-journey {
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
        }
        
        .phone-mockup {
          margin-bottom: 0;
          margin-right: 4rem;
        }
        
        .app-features {
          flex: 1;
          text-align: left;
          max-width: 500px;
        }
        
        h1 {
          font-size: 3rem;
        }
        
        .features-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      
      @media (max-width: 767px) {
        .app-features {
          margin-top: 2rem;
          text-align: center;
        }
        
        .features-title {
          font-size: 1.8rem;
        }
        
        .features-description {
          font-size: 1rem;
        }
        
        .cta-title {
          font-size: 1.8rem;
        }
        
        .cta-subtitle {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
