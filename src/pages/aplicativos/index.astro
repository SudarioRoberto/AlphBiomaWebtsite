---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
---
<Layout>
  <Navbar />

  <!DOCTYPE html>
  <html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AlphaBioma - Jornada Digital do Microbioma</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
    :root {
      --primary: #4B9AFB;
      --primary-dark: #3B7FD1;
      --secondary: #979df0;
      --dark: #0F172A;
      --light: #F8FAFC;
      --accent: #1a24a7;
      --success: #10b981;
      --warning: #f59e0b;
      --danger: #ef4444;
    }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
      }
      
      body {
        background: var(--dark);
        color: var(--light);
        min-height: 100vh;
        overflow-x: hidden;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        margin-top: 100px;
        padding: 4rem 1.5rem;
      }
      
      .header {
        text-align: center;
        margin-bottom: 4rem;
        position: relative;
      }
      
      .header::before {
        content: '';
        position: absolute;
        width: 120px;
        height: 120px;
        background: radial-gradient(var(--primary) 0%, transparent 70%);
        top: -30px;
        left: 50%;
        transform: translateX(-50%);
        opacity: 0.4;
        filter: blur(20px);
        z-index: -1;
      }
      
      .tag {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        background: rgba(52, 211, 153, 0.2);
        border: 1px solid rgba(52, 211, 153, 0.3);
        border-radius: 30px;
        color: var(--primary);
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
      }
      
      h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(to right, var(--primary), var(--secondary));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        line-height: 1.2;
      }
      
      .subtitle {
        font-size: 1.2rem;
        color: rgba(252, 253, 253, 0.7);
        max-width: 700px;
        margin: 0 auto 3rem;
        line-height: 1.6;
      }
      
      /* App Showcase Section */
      .app-journey {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        margin-bottom: 6rem;
      }
      
      .phone-mockup {
        position: relative;
        width: 280px;
        height: 560px;
        background: #1E293B;
        border-radius: 30px;
        padding: 12px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transform: perspective(1000px) rotateY(0deg);
        transition: transform 0.8s ease;
        margin-bottom: 2rem;
      }
      
      .phone-mockup::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 24px;
        background: #e8ecf5;
        border-radius: 20px 20px 0 0;
        z-index: 2;
      }
      
      .phone-notch {
        position: absolute;
        top: 0px;
        left: 50%;
        transform: translateX(-50%);
        width: 150px;
        height: 24px;
        background: #0F172A;
        border-radius: 0 0 16px 16px;
        z-index: 3;
      }
      
      .screen {
        position: relative;
        width: 100%;
        height: 100%;
        background: #e8ecf5;
        border-radius: 20px;
        overflow: hidden;
      }
      
      .screen-content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
      }

      .download-title {
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      background: linear-gradient(to right, var(--primary-light), var(--tertiary));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }
    
    .download-subtitle {
      color: rgba(230, 235, 241, 0.7);
      max-width: 700px;
      margin: 0 auto 2rem;
      line-height: 1.6;
      
    }
      
      .screen-view {
        flex: 0 0 100%;
        width: 100%;
        height: 100%;
        padding: 30px 15px 15px;
        display: flex;
        flex-direction: column;
      }
      
      /* App Header */
        .app-header {
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 1rem;
        }
        .app-logo {
          display: flex;
          align-items: center;
        }
        .app-logo img {
          width: 30px;  /* Try 24px or 20px if this is still too big */
          height: auto;
          margin-right: 4px;
        }
        .app-logo span {
          font-size: 1rem;
          font-weight: 600;
          color: rgb(7, 30, 241);
        }
      .app-menu {
        width: 24px;
        height: 24px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        cursor: pointer;
      }
      .app-menu span {
        display: block;
        width: 100%;
        height: 2px;
        background: rgb(4, 69, 248);
        border-radius: 2px;
      }
      
      /* App Content */
      .app-content {
        flex: 1;
        display: flex;
        flex-direction: column;
      }
      
      .app-heading {
        margin-bottom: 1.5rem;
      }
      
      .app-heading h2 {
        font-size: 1.1rem;
        color: rgb(0, 4, 15);
        margin-bottom: 0.5rem;;
      }
      
      .app-heading p {
        font-size: 0.8rem;
        color: rgb(3, 0, 14);
      }
      
      /* 3D Model Container */
      .model-container {
        position: relative;
        height: 150px;
        background: #747f91;
        border-radius: 12px;
        overflow: hidden;
        margin: 0.5rem 0 1rem 0;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 1);
      }
      
      .model-controls {
        position: absolute;
        bottom: 8px;
        right: 8px;
        display: flex;
        gap: 6px;
        z-index: 5;
      }
      
      .model-btn {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.9);
        border: none;
        color: var(--primary);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: all 0.2s ease;
        font-size: 0.7rem;
      }
      
      .model-btn:hover {
        background: white;
        transform: translateY(-2px);
      }
      
      .model-sample {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.5s ease;
        transform-style: preserve-3d;
      }
      
      .sample-tube {
        width: 40px;
        height: 100px;
        background: linear-gradient(to bottom, rgba(255,255,255,0.9), rgba(220,240,255,0.95));
        border-radius: 20px;
        position: relative;
        box-shadow: 0 10px 15px rgba(0, 70, 173, 0.15);
        transform-style: preserve-3d;
        transition: transform 0.5s ease;
      }
      
      .sample-tube:before {
        content: '';
        position: absolute;
        bottom: 30%;
        left: 10%;
        width: 80%;
        height: 40%;
        background: rgba(0, 130, 255, 0.5);
        border-radius: 0 0 15px 15px;
        transform: translateZ(-5px);
      }
      
      .sample-cap {
        position: absolute;
        top: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 28px;
        height: 12px;
        background: var(--primary);
        border-radius: 14px 14px 0 0;
      }
      
      .sample-label {
        position: absolute;
        top: 20px;
        left: -5px;
        width: 50px;
        height: 25px;
        background: white;
        border: 1px solid #ddd;
        font-size: 0.6rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transform: rotateZ(-5deg) translateZ(2px);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        cursor: pointer;
      }
      
      .dna-strand {
        position: absolute;
        top: 60%;
        left: 50%;
        transform: translate(-50%, -50%) rotateY(0deg);
        width: 16px;
        height: 60px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 1s ease;
      }
      
      .dna-layer {
        position: relative;
        height: 4px;
        width: 100%;
      }
      
      .dna-layer:before, .dna-layer:after {
        content: '';
        position: absolute;
        width: 4px;
        height: 4px;
        border-radius: 50%;
      }
      
      .dna-layer:before {
        left: -8px;
        background: var(--primary);
      }
      
      .dna-layer:after {
        right: -8px;
        background: var(--secondary);
      }
      
      .dna-layer:nth-child(even) {
        transform: rotateY(180deg);
      }
      
      /* Animation */
      @keyframes rotate {
        0% { transform: rotateY(0deg); }
        100% { transform: rotateY(360deg); }
      }
      
      .rotating {
        animation: rotate 10s infinite linear;
      }
      
      /* App Timeline */
      .tracking-timeline {
        flex: 1;
        display: flex;
        flex-direction: column;
      }
      
      .timeline-item {
        display: flex;
        margin-bottom: 0.9rem;
        opacity: 0;
        animation: fadeInRight 0.5s forwards;
      }

      .store-buttons {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-bottom: 3rem;
      flex-wrap: wrap;
    }
    
    .store-btn {
      display: flex;
      align-items: center;
      background: var(--dark);
      border: 1px solid rgba(247, 248, 250, 0.5);
      border-radius: 12px;
      padding: 0.8rem 1.5rem;
      color: var(--white);
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px -5px rgba(92, 156, 175, 0.973);
    }
    
    .store-btn:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px -10px rgba(53, 51, 201, 0.3);
      border-color: rgba(76, 127, 203, 0.6);
    }
    
    .store-icon {
      width: 40px;
      height: 40px;
      margin-right: 12px;
      fill: white;
    }
    
    .store-text {
      text-align: left;
    }
    
    .store-text small {
      display: block;
      font-size: 0.7rem;
      margin-bottom: 2px;
      opacity: 0.7;
    }
    
    .store-text span {
      font-size: 1rem;
      font-weight: 600;
    }
      
      .timeline-item:nth-child(1) { animation-delay: 0.2s; }
      .timeline-item:nth-child(2) { animation-delay: 0.4s; }
      .timeline-item:nth-child(3) { animation-delay: 0.6s; }
      .timeline-item:nth-child(4) { animation-delay: 0.8s; }
      
      .timeline-icon {
        flex: 0 0 40px;
        height: 40px;
        background: rgba(193, 197, 221, 0.9);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
      }
      
      .timeline-icon svg, .timeline-icon i {
        width: 20px;
        height: 20px;
        fill: white;
        color: blue;
        font-size: 16px;
      }
      
      .timeline-content {
        flex: 1;
        background: rgba(30, 41, 59, 0.6);
        padding: 10px 15px;
        border-radius: 12px;
        border-left: 3px solid var(--primary);
      }
      
      .timeline-content h3 {
        font-size: 0.9rem;
        margin-bottom: 4px;
        color: white;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      
      .timeline-content h3 span {
        font-size: 0.5rem;
        background: rgba(240, 240, 247, 0.9);
        color: var(--primary);
        padding: 2px 10px;
        border-radius: 12px;
      }
      
      .timeline-content p {
        font-size: 0.75rem;
        color: rgba(248, 250, 252, 0.6);
      }
      
      /* App Status Dashboard */
      .status-dashboard {
        margin-top: auto;
      }
      
      .status-bar {
        height: 8px;
        background: rgba(30, 41, 59, 0.6);
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 8px;
      }
      
      .status-progress {
        height: 100%;
        width: 75%;
        background: linear-gradient(to right, var(--primary), var(--secondary));
        border-radius: 4px;
        transition: width 1s ease;
      }
      
      .status-text {
        display: flex;
        justify-content: space-between;
        font-size: 0.7rem;
      }
      
      .status-text .current {
        color: var(--primary);
        font-weight: 500;
      }
      
      .status-text .total {
        color: rgba(248, 250, 252, 0.6);
      }
      
      .app-buttons {
        margin-top: 1rem;
        display: flex;
        gap: 8px;
      }
      
      .app-btn {
        flex: 1;
        padding: 8px;
        border-radius: 8px;
        font-size: 0.8rem;
        font-weight: 500;
        text-align: center;
        cursor: pointer;
      }
      
      .app-btn-primary {
        background: var(--primary);
        color: #0F172A;
      }
      
      .app-btn-outline {
        border: 1px solid rgba(52, 211, 153, 0.4);
        color: var(--primary);
      }
      
      /* Screen Navigation Dots */
      .screen-nav {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
      }
      
      .screen-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: rgba(248, 250, 252, 0.3);
        margin: 0 5px;
        cursor: pointer;
        transition: all 0.3s ease;
      }
      
      .screen-dot.active {
        background: var(--primary);
        transform: scale(1.3);
      }
      
      /* Features Section */
      .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
      }
      
      .feature-card {
        background: linear-gradient(145deg, rgba(30, 41, 59, 0.8), rgba(15, 23, 42, 0.6));
        border-radius: 16px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(52, 211, 153, 0.1);
        transition: all 0.3s ease;
      }
      
      .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.3);
        border-color: rgba(52, 211, 153, 0.3);
      }
      
      .feature-card::before {
        content: '';
        position: absolute;
        width: 100px;
        height: 100px;
        background: radial-gradient(var(--primary) 0%, transparent 70%);
        top: -50px;
        right: -50px;
        opacity: 0.15;
        filter: blur(20px);
        transition: all 0.3s ease;
      }
      
      .feature-card:hover::before {
        opacity: 0.25;
        transform: scale(1.5);
      }
      
      .feature-icon {
        width: 50px;
        height: 50px;
        background: rgba(52, 211, 153, 0.2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
      }
      
      .feature-icon svg {
        width: 24px;
        height: 24px;
        fill: var(--primary);
      }
      
      .feature-title {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: white;
      }
      
      .feature-description {
        font-size: 0.9rem;
        color: rgba(248, 250, 252, 0.7);
        line-height: 1.6;
        margin-bottom: 1.5rem;
      }
      
      .feature-more {
        margin-top: auto;
        display: flex;
        align-items: center;
        color: var(--primary);
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
      }
      
      .feature-more svg {
        width: 16px;
        height: 16px;
        margin-left: 8px;
        fill: var(--primary);
        transition: transform 0.3s ease;
      }
      
      .feature-more:hover svg {
        transform: translateX(4px);
      }
      
      /* CTA Section */
      .cta-section {
        margin-top: 6rem;
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(145deg, rgba(30, 41, 59, 0.8), rgba(15, 23, 42, 0.6));
        border-radius: 24px;
        position: relative;
        overflow: hidden;
      }
      
      .cta-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at top right, rgba(52, 211, 153, 0.2), transparent 70%);
        z-index: 0;
      }
      
      .cta-content {
        position: relative;
        z-index: 1;
        max-width: 700px;
        margin: 0 auto;
      }
      
      .cta-title {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        text-align: center;
      }
      
      .cta-subtitle {
        font-size: 1.1rem;
        color: rgba(248, 250, 252, 0.7);
        margin-bottom: 2.5rem;
        line-height: 1.6;
        text-align: center;
      }
      
      .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
      }
      
      .cta-btn {
        padding: 1rem 2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
      }
      
      .cta-btn-primary {
        background: linear-gradient(to right, var(--primary), var(--primary-dark));
        color: #0F172A;
        box-shadow: 0 10px 20px -5px rgba(52, 211, 153, 0.4);
      }
      
      .cta-btn-primary:hover {
        transform: translateY(-4px);
        box-shadow: 0 15px 30px -5px rgba(52, 211, 153, 0.5);
      }
      
      .cta-btn-secondary {
        background: rgba(52, 211, 153, 0.1);
        border: 1px solid rgba(52, 211, 153, 0.3);
        color: var(--primary);
      }
      
      .cta-btn-secondary:hover {
        background: rgba(52, 211, 153, 0.2);
        transform: translateY(-4px);
      }
      
      /* Info Modal */
      .info-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.7);
        z-index: 100;
        align-items: center;
        justify-content: center;
      }
      
      .modal-content {
        background: #1E293B;
        border-radius: 12px;
        width: 90%;
        max-width: 320px;
        padding: 1.5rem;
        position: relative;
        border: 1px solid rgba(52, 211, 153, 0.2);
      }
      
      .close-modal {
        position: absolute;
        top: 12px;
        right: 12px;
        background: none;
        border: none;
        font-size: 1.2rem;
        color: white;
        cursor: pointer;
      }
      
      .modal-title {
        color: var(--primary);
        margin-bottom: 1rem;
        font-size: 1.2rem;
      }
      
      .modal-details {
        margin-bottom: 1rem;
      }
      
      .modal-details p {
        margin-bottom: 0.5rem;
        color: rgba(248, 250, 252, 0.8);
        font-size: 0.85rem;
      }
      
      .modal-details strong {
        color: white;
      }
      
      .modal-btn {
        background: var(--primary);
        color: #0F172A;
        border: none;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        width: 100%;
        font-weight: 600;
        cursor: pointer;
        font-size: 0.9rem;
      }
