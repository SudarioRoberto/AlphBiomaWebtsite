    <script>
    // 3D Controls
    const sampleTube = document.querySelector('.sample-tube');
    const dnaStrand = document.getElementById('dnaStrand');
    const rotateBtn = document.getElementById('rotateBtn');
    const zoomInBtn = document.getElementById('zoomInBtn');
    const zoomOutBtn = document.getElementById('zoomOutBtn');
    
    let rotating = false;
    let rotationX = 0;
    let rotationY = 0;
    let scale = 1;
    
    // Initial animation
    setTimeout(() => {
      dnaStrand.classList.add('rotating');
    }, 1000);
    
    // Rotation toggle
    rotateBtn.addEventListener('click', () => {
      if (rotating) {
        dnaStrand.classList.remove('rotating');
        rotating = false;
      } else {
        dnaStrand.classList.add('rotating');
        rotating = true;
      }
    });
    
    // Zoom controls
    zoomInBtn.addEventListener('click', () => {
      if (scale < 1.5) {
        scale += 0.1;
        updateTransform();
      }
    });
    
    zoomOutBtn.addEventListener('click', () => {
      if (scale > 0.6) {
        scale -= 0.1;
        updateTransform();
      }
    });
    
    // Mouse/touch controls for rotation
    const modelContainer = document.querySelector('.model-container');
    let isDragging = false;
    let previousX, previousY;
    
    modelContainer.addEventListener('mousedown', startDrag);
    modelContainer.addEventListener('touchstart', startDrag);
    
    function startDrag(e) {
      isDragging = true;
      if (e.type === 'touchstart') {
        previousX = e.touches[0].clientX;
        previousY = e.touches[0].clientY;
      } else {
        previousX = e.clientX;
        previousY = e.clientY;
      }
      
      // Stop automatic rotation
      if (rotating) {
        dnaStrand.classList.remove('rotating');
        rotating = false;
      }
    }
    
    document.addEventListener('mousemove', drag);
    document.addEventListener('touchmove', drag);
    
    function drag(e) {
      if (!isDragging) return;
      
      let currentX, currentY;
      if (e.type === 'touchmove') {
        currentX = e.touches[0].clientX;
        currentY = e.touches[0].clientY;
      } else {
        currentX = e.clientX;
        currentY = e.clientY;
      }
      
      const deltaX = currentX - previousX;
      const deltaY = currentY - previousY;
      
      rotationY += deltaX * 0.5;
      rotationX -= deltaY * 0.5;
      
      // Limit rotation on X axis
      rotationX = Math.max(-30, Math.min(30, rotationX));
      
      updateTransform();
      
      previousX = currentX;
      previousY = currentY;
      
      e.preventDefault();
    }
    
    document.addEventListener('mouseup', stopDrag);
    document.addEventListener('touchend', stopDrag);
    
    function stopDrag() {
      isDragging = false;
    }
    
    function updateTransform() {
      sampleTube.style.transform = `rotateX(${rotationX}deg) rotateY(${rotationY}deg) scale(${scale})`;
    }
    
    // Progressive loading animation for timeline items
    const timelineItems = document.querySelectorAll('.timeline-item');
    timelineItems.forEach((item, index) => {
      setTimeout(() => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          item.style.transition = 'all 0.5s ease';
          item.style.opacity = '1';
          item.style.transform = 'translateY(0)';
        }, 50);
      }, index * 150);
    });
    
    // Update progress bar
    const progressBar = document.querySelector('.progress-value');
    progressBar.style.width = '35%';
    </script>
