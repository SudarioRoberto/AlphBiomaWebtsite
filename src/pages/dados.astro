---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
    <Navbar />

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AlphaBioma - An√°lise de Dados</title>
  <style>
    :root {
      --primary: #4B9AFB;
      --primary-dark: #3B7FD1;
      --secondary: #979df0;
      --dark: #0F172A;
      --light: #F8FAFC;
      --accent: #1a24a7;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, var(--dark), #060d19);
      color: var(--light);
      overflow-x: hidden;
      margin: 0;
      padding: 0;
    }
    
    .section {
      padding: 6rem 1.5rem;
      position: relative;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }
    
    /* Hero */
    .hero-section {
      position: relative;
      min-height: 100vh;
      display: flex;
      align-items: center;
      background: radial-gradient(circle at center, rgba(20, 20, 20, 0.8), transparent 70%), linear-gradient(135deg, #08192f, #0b1a2d, #060d19);
      color: white;
    }
    
    .hero-title {
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 800;
      line-height: 1.1;
      background: linear-gradient(to right, var(--primary), var(--secondary));
      -webkit-background-clip: text;
      color: transparent;
      margin-bottom: 1.5rem;
    }
    
    .hero-subtitle {
      font-size: clamp(1rem, 2vw, 1.25rem);
      color: rgba(248, 250, 252, 0.8);
      max-width: 600px;
      line-height: 1.6;
      margin-bottom: 2rem;
    }
    
    .cta-button {
      display: inline-block;
      padding: 1rem 2rem;
      background: linear-gradient(to right, var(--primary), var(--primary-dark));
      color: white;
      font-weight: 600;
      border-radius: 8px;
      text-decoration: none;
      box-shadow: 0 10px 20px -5px rgba(86, 53, 177, 0.4);
      transition: transform 0.3s ease;
    }
    
    .cta-button:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px -5px rgba(34, 106, 201, 0.5);
    }
    
    /* Section Titles */
    .section-title {
      font-size: clamp(1.8rem, 4vw, 2.5rem);
      font-weight: 700;
      margin-bottom: 2rem;
      text-align: center;
      position: relative;
      display: inline-block;
      color: white;
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 4px;
      background: var(--accent);
      border-radius: 2px;
    }
    
    /* Info Cards */
    .data-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 3rem;
      margin-top: 3rem;
    }
    
    .info-card {
      background: rgba(15, 23, 42, 0.8);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(75, 154, 251, 0.2);
      border-radius: 16px;
      padding: 2rem;
      transition: 0.3s ease;
      color: var(--light);
      height: 100%;
      transform-style: preserve-3d;
      transform: perspective(1000px);
    }
    
    .info-card:hover {
      transform: perspective(1000px) translateY(-10px) rotateX(5deg);
      border-color: rgba(75, 154, 251, 0.4);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2),
                  0 0 30px rgba(75, 154, 251, 0.2);
    }
    
    .info-card-icon {
      width: 60px;
      height: 60px;
      background: rgba(28, 6, 230, 0.5);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
    }
    
    .info-card-icon svg {
      width: 32px;
      height: 32px;
      fill: var(--primary);
    }
    
    .info-card-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: white;
    }
    
    .info-card-text {
      color: rgba(248, 250, 252, 0.9);
      line-height: 1.6;
    }
    
    .highlight-text {
      color: var(--primary);
      font-weight: 500;
    }
    
    /* Pain Points Section */
    .pain-section {
      position: relative;
      overflow: hidden;
      padding: 6rem 1.5rem;
      background: linear-gradient(to bottom,#0a1c3f, #37568b, #0a1c3f);
      color: white;
    }
    
    .pain-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at top right, rgba(75, 154, 251, 0.1), transparent 70%);
      z-index: 0;
    }
    
    .pain-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }
    
    .pain-card {
      position: relative;
      background: rgba(5, 26, 75, 0.8);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      padding: 2rem;
      overflow: hidden;
      border: 1px solid rgba(75, 154, 251, 0.2);
      transition: all 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .pain-card:hover {
      transform: translateY(-10px);
      border-color: rgba(75, 154, 251, 0.4);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }
    
    .pain-card::before {
      content: '';
      position: absolute;
      top: -50px;
      right: -50px;
      width: 100px;
      height: 100px;
      background: radial-gradient(var(--primary) 0%, transparent 70%);
      opacity: 0.15;
      filter: blur(20px);
      transition: all 0.3s ease;
      z-index: 0;
    }
    
    .pain-card:hover::before {
      opacity: 0.25;
      transform: scale(1.5);
    }
    
    .pain-card-content {
      position: relative;
      z-index: 1;
      flex: 1;
    }
    
    .pain-icon {
      font-size: 2.5rem;
      color: var(--primary);
      margin-bottom: 1rem;
      line-height: 1;
    }
    
    .pain-card-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: white;
    }
    
    .pain-card-text {
      color: rgba(248, 250, 252, 0.7);
      font-size: 0.95rem;
      line-height: 1.6;
    }
    
    /* Methods Section */
    .methods-section {
      position: relative;
      overflow: hidden;
      padding: 6rem 1.5rem;
      background: linear-gradient(135deg, var(--dark), #060d19);
      color: white;
    }
    
    .methods-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }
    
    .method-card {
      background: rgba(13, 40, 80, 0.4);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(75, 154, 251, 0.2);
      border-radius: 16px;
      padding: 2rem;
      transition: all 0.3s ease;
      height: 100%;
      transform-style: preserve-3d;
      transform: perspective(1000px);
    }
    
    .method-card:hover {
      transform: perspective(1000px) translateY(-10px) rotateX(5deg);
      border-color: rgba(75, 154, 251, 0.4);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2),
                  0 0 30px rgba(75, 154, 251, 0.2);
    }
    
    .method-icon {
      width: 60px;
      height: 60px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
      color: var(--primary);
      font-size: 2.5rem;
    }
    
    .method-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: white;
    }
    
    .method-text {
      color: rgba(248, 250, 252, 0.9);
      line-height: 1.6;
    }
    
    /* Process Timeline */
    .process-section {
      position: relative;
      padding: 6rem 1.5rem;
    }
    
    .timeline-container {
      position: relative;
      margin-top: 4rem;
    }
    
    .timeline-track {
      position: absolute;
      top: 0;
      left: 50%;
      width: 4px;
      height: 100%;
      background: rgba(75, 154, 251, 0.2);
      transform: translateX(-50%);
      z-index: 1;
    }
    
    .timeline-progress {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 0;
      background: linear-gradient(to bottom, var(--primary), var(--accent));
      transition: height 1.5s ease;
      z-index: 2;
    }
    
    .timeline-items {
      position: relative;
      z-index: 3;
    }
    
    .timeline-item {
      display: flex;
      align-items: center;
      margin-bottom: 6rem;
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.8s ease;
    }
    
    .timeline-item:last-child {
      margin-bottom: 0;
    }
    
    .timeline-item.left {
      flex-direction: row;
    }
    
    .timeline-item.right {
      flex-direction: row-reverse;
    }
    
    .timeline-icon {
      flex: 0 0 120px;
      height: 120px;
      margin: 0 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(13, 40, 80, 0.5);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(75, 154, 251, 0.3);
      border-radius: 50%;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 
                  0 0 20px rgba(75, 154, 251, 0.3);
      position: relative;
      overflow: hidden;
      transition: all 0.4s ease;
      transform-style: preserve-3d;
      transform: perspective(1000px);
    }
    
    .timeline-icon::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle at center, rgba(75, 154, 251, 0.2) 0%, transparent 70%);
      opacity: 0;
      transform: scale(0.5);
      transition: all 0.6s ease;
    }
    
    .timeline-icon:hover {
      transform: perspective(1000px) scale(1.05) rotateY(10deg);
      border-color: rgba(75, 154, 251, 0.8);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3), 
                  0 0 30px rgba(75, 154, 251, 0.5);
    }
    
    .timeline-icon:hover::before {
      opacity: 1;
      transform: scale(1);
      animation: pulse 2s infinite;
    }
    
    .timeline-content {
      flex: 1;
      max-width: calc(50% - 4rem);
      padding: 2rem;
      background: rgba(13, 40, 80, 0.4);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      border: 1px solid rgba(75, 154, 251, 0.2);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      transition: all 0.4s ease;
      transform-style: preserve-3d;
      transform: perspective(1000px);
    }
    
    .timeline-content:hover {
      transform: perspective(1000px) translateY(-5px) rotateX(5deg);
      border-color: rgba(75, 154, 251, 0.4);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2),
                  0 0 20px rgba(75, 154, 251, 0.2);
    }
    
    .timeline-content h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: #ffffff;
      display: flex;
      align-items: center;
    }
    
    .timeline-content h3 span {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      margin-right: 12px;
      background: linear-gradient(135deg, var(--primary), var(--accent));
      border-radius: 50%;
      font-size: 1.2rem;
    }
    
    .timeline-content p {
      color: rgba(248, 250, 252, 0.7);
      font-size: 1rem;
      line-height: 1.6;
    }
    
    .info-box {
      margin-top: 1.5rem;
      padding: 1rem;
      background: rgba(75, 154, 251, 0.1);
      border-left: 3px solid var(--accent);
      border-radius: 4px;
    }
    
    .info-box h4 {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      color: white;
    }
    
    .info-box p {
      font-size: 0.9rem;
      color: rgba(248, 250, 252, 0.7);
    }
    
    /* Case Studies Section */
    .case-studies-section {
      background: linear-gradient(to bottom,#0a1c3f, #37568b, #0a1c3f);
      padding: 6rem 1.5rem;
      position: relative;
      overflow: hidden;
    }
    
    .case-studies-container {
      position: relative;
      z-index: 1;
    }
    
    .case-studies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }
    
    .case-study-card {
      background: rgba(13, 40, 80, 0.5);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(75, 154, 251, 0.2);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.3s ease;
    }
    
    .case-study-card:hover {
      transform: translateY(-10px);
      border-color: rgba(75, 154, 251, 0.4);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3),
                  0 0 30px rgba(75, 154, 251, 0.3);
    }
    
    .case-study-image {
      height: 200px;
      background-color: #1a2e50;
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .case-study-image svg {
      width: 80px;
      height: 80px;
      fill: var(--primary);
      opacity: 0.7;
    }
    
    .case-study-content {
      padding: 1.5rem;
    }
    
    .case-study-tag {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: rgba(75, 154, 251, 0.2);
      color: var(--primary);
      border-radius: 50px;
      font-size: 0.8rem;
      margin-bottom: 1rem;
    }
    
    .case-study-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: white;
    }
    
    .case-study-description {
      color: rgba(248, 250, 252, 0.7);
      font-size: 0.95rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }
    
    .case-study-result {
      display: flex;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid rgba(75, 154, 251, 0.2);
    }
    
    .result-icon {
      color: var(--primary);
      margin-right: 0.5rem;
    }
    
    .result-text {
      color: var(--primary);
      font-weight: 600;
    }
    
    /* CTA Section */
    .cta-section {
      text-align: center;
      padding: 6rem 0;
      position: relative;
      overflow: hidden;
    }
    
    .cta-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at center, rgba(75, 154, 251, 0.2), transparent 60%);
      z-index: 0;
    }
    
    .cta-content {
      position: relative;
      z-index: 1;
      max-width: 700px;
      margin: 0 auto;
    }
    
    .cta-title {
      font-size: clamp(1.8rem, 4vw, 2.5rem);
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: white;
    }
    
    .cta-text {
      font-size: 1.1rem;
      color: rgba(248, 250, 252, 0.8);
      margin-bottom: 2.5rem;
    }
    
    .cta-buttons {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
    }
    
    .cta-btn-secondary {
      background: transparent;
      border: 2px solid var(--primary);
      color: var(--primary);
    }
    
    /* Animations */
    @keyframes pulse {
      0% {
        opacity: 0.4;
      }
      50% {
        opacity: 0.8;
      }
      100% {
        opacity: 0.4;
      }
    }
    
    @keyframes float {
      0% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-20px);
      }
      100% {
        transform: translateY(0);
      }
    }
    
    /* Chart visualization */
    .visualization-container {
      height: 300px;
      background-color: rgba(13, 40, 80, 0.5);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      border: 1px solid rgba(75, 154, 251, 0.2);
      margin-top: 3rem;
      overflow: hidden;
      position: relative;
    }
    
    .chart-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: rgba(15, 23, 42, 0.7);
      transition: opacity 0.3s ease;
    }
    
    .chart-text {
      text-align: center;
      max-width: 80%;
    }
    
    .chart-text h3 {
      font-size: 1.5rem;
      color: white;
      margin-bottom: 1rem;
    }
    
    .chart-text p {
      color: rgba(248, 250, 252, 0.8);
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
    
    .chart-btn {
      display: inline-block;
      padding: 0.5rem 1.5rem;
      background: var(--primary);
      color: white;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .chart-btn:hover {
      background: var(--primary-dark);
      transform: translateY(-3px);
    }
    
    /* Mobile responsiveness */
    @media (max-width: 767px) {
      .section {
        padding: 4rem 1rem;
      }
      
      .timeline-item {
        flex-direction: column !important;
        align-items: flex-start;
        padding-left: 3rem;
        margin-bottom: 4rem;
      }
      
      .timeline-track {
        left: 1.5rem;
      }
      
      .timeline-icon {
        position: absolute;
        left: 0;
        top: 0;
        transform: translateX(-50%);
        width: 60px;
        height: 60px;
        margin: 0;
      }
      
      .timeline-content {
        max-width: 100%;
        margin-top: 2rem;
      }
      
      .pain-card {
        height: auto;
      }
      
      .cta-buttons {
        flex-direction: column;
        align-items: center;
      }
      
      .cta-button {
        width: 100%;
        text-align: center;
        margin-bottom: 1rem;
      }
    }
  </style>
</head>
