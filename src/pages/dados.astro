      createParticles();
      
      // Timeline animation with simple JavaScript
      const timelineItems = document.querySelectorAll('.timeline-item');
      const timelineProgress = document.getElementById('timelineProgress');
      
      // Function to check if an element is in viewport
      function isElementInViewport(el) {
        const rect = el.getBoundingClientRect();
        return (
          rect.top >= 0 &&
          rect.left >= 0 &&
          rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
          rect.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
      }
      
      // Function to animate elements when they come into view
      function animateOnScroll() {
        let progressStep = 0;
        
        timelineItems.forEach((item, index) => {
          if (isElementInViewport(item)) {
            item.style.opacity = '1';
            item.style.transform = 'translateY(0)';
            
            // Update progress step if this is the furthest item seen
            if (index + 1 > progressStep) {
              progressStep = index + 1;
            }
          }
        });
        
        // Update timeline progress
        if (timelineProgress) {
          const progress = (progressStep / timelineItems.length) * 100;
          timelineProgress.style.height = `${progress}%`;
        }
      }
      
      // Animate elements in viewport on page load
      animateOnScroll();
      
      // Animate elements when scrolling
      window.addEventListener('scroll', animateOnScroll);
      
