<!-- src/pages/admin/index.astro -->
---
import Layout from '../../layouts/LayoutAdmin.astro';
import { supabase } from '../../lib/supabase.js';

export const prerender = false;
const { cookies, redirect } = Astro;

// Verificar autenticação
const isAdminAuth = cookies.get('admin_auth')?.value === 'true';
if (!isAdminAuth) {
  return redirect('/admin/login');
}

// Buscar projetos e contar amostras
const { data: projects, error: projectsError } = await supabase
  .from('projects')
  .select('id, name, description, created_at, project_id, status, sample_count')
  .order('created_at', { ascending: false });

if (projectsError) {
  console.error('Erro ao buscar projetos:', projectsError);
}

// Contar totais para dashboard
const projectCount = projects?.length || 0;
let totalSamples = 0;
let completedProjects = 0;

if (projects) {
  totalSamples = projects.reduce((sum, project) => sum + (project.sample_count || 0), 0);
  completedProjects = projects.filter(p => p.status === 'Relatório entregue').length;
}

// Função para formatar status com classes CSS
function getStatusClass(status) {
  switch(status) {
    case 'Relatório entregue': return 'bg-green-100 text-green-800';
    case 'Material entregue': return 'bg-yellow-100 text-yellow-800';
    case 'Amostras coletadas': return 'bg-blue-100 text-blue-800';
    case 'DNA extraído': return 'bg-purple-100 text-purple-800';
    case 'DNA sequenciado': return 'bg-indigo-100 text-indigo-800';
    case 'Analisando dados': return 'bg-orange-100 text-orange-800';
    default: return 'bg-gray-100 text-gray-800';
  }
}
---

<Layout>
  <section class="min-h-screen bg-white text-black px-6 py-12">
    <div class="max-w-6xl mx-auto space-y-8">
      <h1 class="text-3xl font-bold text-blue-900 text-center">Dashboard de Projetos</h1>
      
      <!-- Cards de estatísticas -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-blue-50 p-6 rounded-xl shadow">
          <p class="text-3xl font-bold text-blue-900">{projectCount}</p>
          <p class="text-sm text-blue-600">Projetos Ativos</p>
        </div>
        <div class="bg-green-50 p-6 rounded-xl shadow">
          <p class="text-3xl font-bold text-green-900">{totalSamples}</p>
          <p class="text-sm text-green-600">Total de Amostras</p>
        </div>
        <div class="bg-purple-50 p-6 rounded-xl shadow">
          <p class="text-3xl font-bold text-purple-900">{completedProjects}</p>
          <p class="text-sm text-purple-600">Projetos Concluídos</p>
        </div>
      </div>
      
      <!-- Menu rápido de ações -->
      <div class="flex flex-wrap gap-4 mb-8">
        <a href="/admin/create" class="flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Novo Projeto
        </a>
        <a href="/admin/generic-samples" class="flex items-center gap-2 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          Banco de Amostras
        </a>
        <a href="/api/sync-sample-counts?redirect=/admin" class="flex items-center gap-2 bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Sincronizar Contagens
        </a>
      </div>
      
      <!-- Lista de projetos -->
      {projects?.length > 0 ? (
        <div class="grid grid-cols-1 gap-6">
          {projects.map(project => (
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden hover:shadow-md transition">
              <div class="p-6 flex flex-col md:flex-row justify-between">
                <div class="space-y-2">
                  <div class="flex items-center gap-2">
                    <h2 class="text-xl font-semibold text-blue-900">{project.name}</h2>
                    <span class={`text-xs px-2 py-1 rounded-full font-medium ${getStatusClass(project.status)}`}>
                      {project.status || 'Projeto gerado'}
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">ID: {project.project_id}</p>
                  {project.description && <p class="text-sm text-gray-700">{project.description}</p>}
                  <div class="mt-2 flex items-center gap-4">
                    <span class="text-sm text-gray-500">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {new Date(project.created_at).toLocaleDateString()}
                    </span>
                    <span class="text-sm text-blue-600 font-semibold">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                      </svg>
                      {project.sample_count || 0} amostras
                    </span>
                  </div>
                </div>
                <div class="flex flex-row md:flex-col justify-end gap-3 mt-4 md:mt-0">
                <button 
                  class="flex items-center justify-center gap-2 bg-red-100 text-red-800 px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-200 transition"
                  onclick={`confirmDelete('${project.project_id}')`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                  Excluir Projeto
                </button>
                  <a 
                    href={`/admin/samples/${project.id}/`} 
                    class="flex items-center justify-center gap-2 bg-blue-100 text-blue-800 px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-200 transition"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                    Ver Amostras
                  </a>
                  <a 
                    href={`/admin/edit/${project.id}/`} 
                    class="flex items-center justify-center gap-2 bg-gray-100 text-gray-800 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Editar Projeto
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="bg-gray-50 p-8 rounded-xl text-center">
          <p class="text-gray-500 text-lg">Nenhum projeto encontrado.</p>
          <a href="/admin/create" class="mt-4 inline-block bg-blue-900 text-white px-4 py-2 rounded hover:bg-blue-800">
            Criar Novo Projeto
          </a>
        </div>
      )}
    </div>
  </section>
  <script>
    async function confirmDelete(projectId) {
      if (!confirm("Tem certeza que deseja excluir este projeto?")) return;
  
      try {
        const res = await fetch('/api/delete-project', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ projectId })
        });
  
        const json = await res.json();
  
        if (json.success) {
          alert('Projeto excluído com sucesso.');
          location.reload();
        } else {
          alert('Erro ao excluir: ' + json.message);
          console.error(json);
        }
      } catch (e) {
        alert('Erro inesperado ao excluir.');
        console.error(e);
      }
    }
  </script>
  </Layout>